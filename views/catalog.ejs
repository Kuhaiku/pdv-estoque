<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Catálogo de Vendas da Érica</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Estilos específicos para o catálogo */
        /* ... (seus estilos existentes do catálogo) ... */

        /* Estilos para o botão de fullscreen */
        .fullscreen-btn {
            position: absolute; /* Ou fixed, dependendo do posicionamento desejado */
            top: 10px;
            right: 10px;
            background-color: var(--color-primary-blue-dark);
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: var(--border-radius-small);
            cursor: pointer;
            font-size: 1.2em;
            z-index: 1000; /* Garante que fique acima de outros elementos */
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .fullscreen-btn:hover {
            background-color: var(--color-primary-blue-medium);
        }

        /* Esconde o título principal quando em fullscreen para otimizar espaço */
        .fullscreen h1 {
            display: none;
        }

        /* Ajuste para o botão em telas menores */
        @media (max-width: 480px) {
            .fullscreen-btn {
                top: 5px;
                right: 5px;
                padding: 8px 12px;
                font-size: 1em;
            }
        }
    </style>
</head>
<body>
    <button id="fullscreenToggle" class="fullscreen-btn">
        <i class="fas fa-expand"></i>
        <span>Tela Cheia</span>
    </button>

    <h1>Catálogo de Vendas da Érica</h1>

    <div class="catalog-container">
        <% if (itens.length > 0) { %>
            <% itens.forEach(item => { %>
                <% if (item.quantidade > 0) { %>
                    <div class="catalog-item-card">
                        <% if (item.imagem) { %>
                            <img src="/uploads/<%= item.imagem %>" alt="<%= escapeHTML(item.nome) %>">
                        <% } else { %>
                            <img src="/img/placeholder.png" alt="Sem imagem">
                        <% } %>
                        <div class="catalog-item-info">
                            <div class="text-info">
                                <div class="catalog-item-name"><%= escapeHTML(item.nome) %></div>
                                <div class="catalog-item-quantity">Qtd: <%= item.quantidade %></div>
                            </div>
                            <div class="catalog-item-price">R$ <%= item.valor_venda.toFixed(2).replace('.', ',') %></div>
                        </div>
                    </div>
                <% } %>
            <% }); %>
        <% } else { %>
            <p class="no-items-message">Nenhum item disponível no catálogo no momento.</p>
        <% } %>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const fullscreenToggle = document.getElementById('fullscreenToggle');
            const body = document.body;

            function toggleFullscreen() {
                if (!document.fullscreenElement) {
                    body.requestFullscreen().catch(err => {
                        console.error(`Erro ao ativar tela cheia: <span class="math-inline">\{err\.message\} \(</span>{err.name})`);
                    });
                    fullscreenToggle.innerHTML = '<i class="fas fa-compress"></i> <span>Sair Tela Cheia</span>';
                } else {
                    document.exitFullscreen();
                    fullscreenToggle.innerHTML = '<i class="fas fa-expand"></i> <span>Tela Cheia</span>';
                }
            }

            fullscreenToggle.addEventListener('click', toggleFullscreen);

            // Atualiza o texto do botão quando o modo fullscreen muda (ex: pelo ESC)
            document.addEventListener('fullscreenchange', () => {
                if (document.fullscreenElement) {
                    fullscreenToggle.innerHTML = '<i class="fas fa-compress"></i> <span>Sair Tela Cheia</span>';
                    body.classList.add('fullscreen'); // Adiciona classe ao body
                } else {
                    fullscreenToggle.innerHTML = '<i class="fas fa-expand"></i> <span>Tela Cheia</span>';
                    body.classList.remove('fullscreen'); // Remove classe do body
                }
            });

             // Ocultar barra de rolagem quando em fullscreen
            document.addEventListener('fullscreenchange', function() {
                if (document.fullscreenElement) {
                    document.body.style.overflow = 'hidden';
                } else {
                    document.body.style.overflow = ''; // Volta ao padrão
                }
            });
        });
    </script>
</body>
</html>
